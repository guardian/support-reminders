{
	"name": "cdk",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"test-update": "jest -u",
		"format": "prettier --write \"{lib,bin}/**/*.ts\"",
		"lint": "eslint lib bin",
		"synth": "cdk synth --path-metadata false --version-reporting false",
		"diff": "cdk diff --path-metadata false --version-reporting false"
	},
	"devDependencies": {
		"@guardian/cdk": "61.1.3",
		"@guardian/eslint-config": "^12.0.1",
		"@guardian/prettier": "^10.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "24.10.2",
		"@typescript-eslint/eslint-plugin": "^8.18.1",
		"@typescript-eslint/parser": "^8.18.1",
		"aws-cdk": "2.177.0",
		"aws-cdk-lib": "2.177.0",
		"constructs": "10.4.2",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"jest": "^30.2.0",
		"prettier": "^3.4.2",
		"source-map-support": "^0.5.20",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.18.1"
	},
	"prettier": "@guardian/prettier",
	"jest": {
		"testMatch": [
			"<rootDir>/lib/**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"setupFilesAfterEnv": [
			"./jest.setup.js"
		]
	},
	"resolutions": {
		"@types/parse-path": "7.0.0"
	}
}
